<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutHeader_hourly_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_dark"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_of_location_in_hourly_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Местоположение"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/down_arrow_of_location_in_hourly_fragment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/name_of_location_in_hourly_fragment"
            android:src="@drawable/ic_down_arrow" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>